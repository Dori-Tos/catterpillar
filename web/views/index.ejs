<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Caterpillar</title>
        <link rel="icon" type="image/png" href="img/favicon.png" />
        <link
            href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css"
        />
        <script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="Webinterface_Frontend.js" defer></script>
        <style>
            #map {
                width: 100%;
                height: 100%;
            }
            /* Custom scrollbar for vehicle list */
            #vehicle-list::-webkit-scrollbar {
                width: 6px;
            }
            #vehicle-list::-webkit-scrollbar-track {
                background: #f1f1f1;
            }
            #vehicle-list::-webkit-scrollbar-thumb {
                background: #888;
                border-radius: 3px;
            }
        </style>
    </head>
    <body>
        <div class="flex h-screen">
            <div id="sidebar" class="w-1/4 bg-gray-200 p-4 overflow-y-auto flex flex-col">
                <h1 class="text-2xl font-bold mb-4">Vehicle Management</h1>
                
                <!-- Search Input -->
                <div class="mb-4">
                    <input 
                        type="text" 
                        id="vehicle-search" 
                        placeholder="Search vehicles..." 
                        class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                </div>

                <!-- Assistance Filter -->
                <div class="mb-4 flex items-center">
                    <input 
                        type="checkbox" 
                        id="assistance-filter" 
                        class="mr-2"
                    >
                    <label for="assistance-filter" class="text-sm">Show Only Vehicles Needing Assistance</label>
                </div>

                <!-- Vehicle List -->
                <ul 
                    id="vehicle-list" 
                    class="flex-grow overflow-y-auto pr-2"
                ></ul>
            </div>
            <div id="map" class="w-3/4 h-full"></div>
        </div>
    </body>
</html>